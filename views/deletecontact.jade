extends layout
block content
      div.header
        h1.text-center Delete Contact
      form.form-horizontal(role="form", action="/deletecontact", method="post")
        div.col-sm-6
          label.control-label(for="firstname") First Name
          input.form-control(type="text" name="firstname" id="firstname" value="#{contact.name.first}" disabled)

        div.col-sm-6
          label.control-label(for="lastame") Last Name
          input.form-control(type="text" name="lastname" id="lastname" value="#{contact.name.last}" disabled)
        
        div.col-sm-6
          label.control-label(for="email") Email
          input.form-control(type="text" name="email" id="email" value="#{contact.email}" disabled)

        div.col-sm-6
          label.control-label(for="phone") Phone
          input.form-control(type="text" name="phone" id="phone" value="#{contact.phone}" disabled)
        
        div.col-sm-6
          label.control-label(for="date") Date
          input.form-control(type="text" name="DATE" id="DATE" value="#{contact.DATE}" disabled)
        
        div.col-sm-6
          label.control-label(for="whereMet") Location
          input.form-control(type="text" name="whereMet" id="whereMet" value="#{contact.whereMet}" disabled)
        
        div.col-sm-12
          label.control-label(for="comments") Comments
          input.form-control(type="text" name="comments" id="comments" value="#{contact.comments}" disabled)
       
        div.row
          div.col-sm-4
            button.btn.btn-primary.btn-lg(type="submit" name="button" value="no") No
          div.col-sm-4.col-sm-offset-4
            button.btn.btn-primary.btn-lg(type="submit" name="button" value="yes") Yes